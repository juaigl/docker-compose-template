# ⚠️ IMPORTANT: DO NOT copy the entire content of the .env-sample file to your .env file.
# Only copy and modify the variables you need to change.
# The default values shown in the .env-sample are automatically loaded by Comet.
#
# See all available variables at:
# https://github.com/g0ldyy/comet/blob/main/.env-sample

FASTAPI_PORT=2020

# ============================== #
# CometNet P2P Network           #
# ============================== #
# Set to True to enable cometnet p2p torrent scrape sharing
COMETNET_ENABLED=False
COMETNET_SKIP_REACHABILITY_CHECK=True
COMETNET_ADVERTISE_URL=wss://${COMET_HOSTNAME}/cometnet/ws

# Populate these with existing nodes/peers from the community, or join pools from the admin dashboard
COMETNET_BOOTSTRAP_NODES=[]
COMETNET_MANUAL_PEERS=[]

# Generate API key using:
#   Linux/macOS: openssl rand -hex 32
#   Windows (PowerShell): -join ((0..31) | ForEach-Object { '{0:x2}' -f (Get-Random -Minimum 0 -Maximum 255) })
#   Or: [System.Guid]::NewGuid().ToString("N") + [System.Guid]::NewGuid().ToString("N") (ensure it's 64 chars)
COMETNET_API_KEY=
